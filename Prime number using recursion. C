#include<stdio.h>

#include<conio.h>

int main()

{

	int n,p;
  printf("\n ENTER ANY NUMBER:");

	scanf("%d",&n);

	p=prime(n,n/2);

	if(p==1)

	printf("\n %d is a PRIME number",n);

	else

	printf("\n %d is not a PRIME number",n);

	getch();

}

int prime(int n,int i)

{

	if(i==1)

	return 1;

	if(n%i==0)

	return 0;

	return prime(n,i-1);

}
